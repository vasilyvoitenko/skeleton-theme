{% doc %}
  @prompt
    contacts

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contacts-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-contacts-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {% if block.settings.layout == 'row' %}row{% else %}column{% endif %};
    gap: {{ block.settings.spacing }}px;
    align-items: {% if block.settings.layout == 'row' %}center{% else %}flex-start{% endif %};
    justify-content: flex-start;
    flex-wrap: wrap;
  }

  .ai-contacts-heading-{{ ai_gen_id }} {
    width: 100%;
    margin-top: 0;
    margin-bottom: {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-contacts-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    {% if block.settings.layout == 'row' %}
      margin-right: 20px;
    {% else %}
      margin-bottom: 15px;
    {% endif %}
  }

  .ai-contacts-icon-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
  }

  .ai-contacts-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-contacts-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-contacts-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-contacts-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-contacts-container-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
    }

    .ai-contacts-item-{{ ai_gen_id }} {
      margin-right: 0;
      margin-bottom: 15px;
    }

    .ai-contacts-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-contacts-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-contacts-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-contacts-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="ai-contacts-container-{{ ai_gen_id }}">
    {% if block.settings.show_phone and block.settings.phone != blank %}
      <div class="ai-contacts-item-{{ ai_gen_id }}">
        <div class="ai-contacts-icon-{{ ai_gen_id }}">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
        </div>
        <div class="ai-contacts-text-{{ ai_gen_id }}">
          {% if block.settings.phone_link %}
            <a href="tel:{{ block.settings.phone | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" class="ai-contacts-link-{{ ai_gen_id }}">{{ block.settings.phone }}</a>
          {% else %}
            {{ block.settings.phone }}
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_email and block.settings.email != blank %}
      <div class="ai-contacts-item-{{ ai_gen_id }}">
        <div class="ai-contacts-icon-{{ ai_gen_id }}">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </div>
        <div class="ai-contacts-text-{{ ai_gen_id }}">
          <a href="mailto:{{ block.settings.email }}" class="ai-contacts-link-{{ ai_gen_id }}">{{ block.settings.email }}</a>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_address and block.settings.address != blank %}
      <div class="ai-contacts-item-{{ ai_gen_id }}">
        <div class="ai-contacts-icon-{{ ai_gen_id }}">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <div class="ai-contacts-text-{{ ai_gen_id }}">
          {% if block.settings.address_link and block.settings.map_url != blank %}
            <a href="{{ block.settings.map_url }}" target="_blank" rel="noopener" class="ai-contacts-link-{{ ai_gen_id }}">{{ block.settings.address }}</a>
          {% else %}
            {{ block.settings.address }}
          {% endif %}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_hours and block.settings.hours != blank %}
      <div class="ai-contacts-item-{{ ai_gen_id }}">
        <div class="ai-contacts-icon-{{ ai_gen_id }}">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        </div>
        <div class="ai-contacts-text-{{ ai_gen_id }}">
          {{ block.settings.hours }}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_custom and block.settings.custom_label != blank %}
      <div class="ai-contacts-item-{{ ai_gen_id }}">
        <div class="ai-contacts-icon-{{ ai_gen_id }}">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
        </div>
        <div class="ai-contacts-text-{{ ai_gen_id }}">
          {% if block.settings.custom_link != blank %}
            <a href="{{ block.settings.custom_link }}" class="ai-contacts-link-{{ ai_gen_id }}">{{ block.settings.custom_label }}</a>
          {% else %}
            {{ block.settings.custom_label }}
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

